<div class="FCKThumb">
  <table border="0" cellpadding="0" cellspacing="0" height="100" width="100">
    <tbody>
      <tr>
        <td align="center" valign="middle">
          <%= image_tag('../../../public/uploaded/images/contents', :alt=>image.name, :title=>image.name, :onerror=>"this.src='/javascripts/ckeditor/images/ckfnothumb.gif'", :class=>'image' ) %>
        </td>
       </tr>
     </tbody>
   </table>
   
   <div class="FCKFileName"><%= image.name %></div>
   <div class="FCKFileDate"><%= image.created_at %></div>
</div>
